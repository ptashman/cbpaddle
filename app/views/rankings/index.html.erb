<% provide(:title, 'Rankings') %>
<h1>League Rankings</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Name</th>
    <th>Wins</th>
    <th>Losses</th>
  </tr>
 
<% @players.each_with_index do |player, rank| %>
  <tr>
    <td><%= rank + 1 %></td>
    <td><%= player.name %></td>
    <td><%= player.win_count %></td>
    <td><%= player.loss_count %></td>
  </tr>
<% end %>
</table>